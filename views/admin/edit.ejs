<!DOCTYPE html>
<html>



<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title><%=pageTitle%></title>
    <%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/pages/reclutador/vacancies.css">
    <link rel="stylesheet" href="/css/pages/empleado/vacancies.css">
</head>

<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">

        <!-- Navbar -->
        <%- include('../includes/navbar.ejs') %>
        <!-- /.navbar -->
        <!-- SideBar -->
        <%- include('../includes/sidebar.ejs') %> 
        <!-- /.SideBar -->

        <!-- Main content -->
        <div class="content-wrapper p-3">
            <!-- Main content -->
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a>Edit user  </a></li>
                            </ol>
                        </div><!-- /.col -->
                    </div><!-- /.row -->
                </div><!-- /.container-fluid -->
            </div>

            <div class="container">
                <form method="POST" action="/admin/edit-user/<%= u.id %>">
                    <div class="form-row">
                      <div class="form-group col-md-6">
                        <label for="name">Name</label>
                        <input type="text" class="form-control" id="inputEmail4" value="<%= u.name %>" name="name">
                      </div>
                      <div class="form-group col-md-6">
                        <label for="email">Email</label>
                        <input type="email" class="form-control" id="inputPassword4" value="<%= u.email %>" name="email">
                      </div>
                    </div>
                    <div class="form-group">
                      <label for="phone">Phone</label>
                      <input type="number" class="form-control" id="inputAddress" value="<%= u.phone %>" max="9999999999" name="phone">
                    </div>
                    <div class="form-group">
                        <label for="RoleId">Select Role</label>
                        <select class="form-control" id="exampleFormControlSelect1" name="RoleId">
                            
                            <% if (u.role.id == 1) { %>
                              <option value="1" selected="selected"><%= u.role.name %></option>
                              <option value="2">subscriber</option>
                              <%} else { %>
                                <option value="2" selected="selected"><%= u.role.name %></option>
                                <option value="1">admin</option>
                              <% } %>
                            
                            
                    
                          
                        </select>
                      </div>
                    <button type="submit" class="btn btn-primary">Edit</button>
                  </form>
            </div>
            
            <!-- /.content -->
        </div>
        <!-- end content -->

        <!-- Footer -->
        <%- include('../includes/footer.ejs') %>
        <!-- end footer -->


    </div>
    <!-- ./wrapper -->


    <!-- Scripts -->
    <%- include('../includes/scripts.ejs') %>
    <script src="/js/HR/cards.js"></script>
    <!-- End Scripts-->

</body>


</html>